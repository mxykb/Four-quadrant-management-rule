<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- 日历组件 -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:dateTextAppearance="@style/CalendarDateTextAppearance"
        android:weekDayTextAppearance="@style/CalendarWeekDayTextAppearance" />

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginHorizontal="16dp" />

    <!-- 选中日期的提醒标题 -->
    <TextView
        android:id="@+id/selected_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="今天的提醒 (0条)"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:drawableTint="@color/purple_primary"
        android:gravity="center_vertical" />

    <!-- 选中日期的提醒列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_date_reminders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout> 